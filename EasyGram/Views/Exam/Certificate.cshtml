@model EasyGram.ViewModels.Exam.CertificateViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            background: #fff;
            font-family: 'Arial', sans-serif;
        }

        .certificate {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width: 100vw;
            border: 12px solid #545BE8;
            box-sizing: border-box;
            text-align: center;
            padding: 40px;
            position: relative;
        }

        .logo {
            width: 80px;
            height: 80px;
            background: #545BE8;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 30px;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .header {
            font-size: 42px;
            font-weight: bold;
            color: #545BE8;
            margin-bottom: 16px;
        }

        .subheader {
            font-size: 24px;
            color: #545BE8;
            opacity: 0.8;
            margin-bottom: 40px;
        }

        .recipient {
            font-size: 28px;
            color: #222;
            font-weight: 600;
            margin: 20px 0;
        }

        .congrats {
            font-size: 20px;
            color: #444;
            margin: 20px 0;
            line-height: 1.6;
        }

        .details {
            font-size: 18px;
            color: #555;
            margin: 12px 0;
            line-height: 1.4;
        }

        .grade {
            font-size: 28px;
            font-weight: bold;
            color: #545BE8;
            margin: 24px 0;
        }

        .date {
            font-size: 16px;
            color: #888;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="certificate">
        <div class="logo">E</div>
        <div class="header">СЕРТИФИКАТ</div>
        <div class="subheader">об успешном прохождении экзамена</div>
        <div class="recipient">@Model.UserName</div>
        <div class="congrats">
            Поздравляем! Вы успешно прошли экзамен и показали отличные результаты.
            <br>
            Ваш труд и старания отмечены высокими баллами.
        </div>
        <div class="details">
            Количество вопросов: @Model.TotalQuestions<br>
            Правильных ответов: @Model.CorrectAnswers<br>
            Процент выполнения: @Model.Percentage%
        </div>
        <div class="grade">Оценка: @Model.Grade</div>
        <div class="date">Дата выдачи: @Model.CompletedDate.ToString("dd.MM.yyyy")</div>
    </div>
</body>
</html>